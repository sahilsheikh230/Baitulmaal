<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Donations - Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="container my-5">
    <h2 class="mb-4 text-primary"><i class="fas fa-donate me-2"></i>All Donations</h2>

    <% if (donations.length === 0) { %>
      <div class="alert alert-info">No donations found.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Donor</th>
              <th>Email</th>
              <th>Amount (INR)</th>
              <th>Baitulmaal</th>
              <th>Payment ID</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% donations.forEach((d, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= d.donor?.username || "Unknown" %></td>
                <td><%= d.donor?.email || "N/A" %></td>
                <td>â‚¹<%= d.amount %></td>
                <td><%= d.baitulmaal?.name || "Unknown" %></td>
                <td><%= d.paymentId %></td>
                <td><%= new Date(d.createdAt).toLocaleString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>

    <a href="/home/admindashboard" class="btn btn-outline-secondary mt-4">
      <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
    </a>
  </div>
</body>
</html>
